<h1>Cars</h1>

<div class="d-flex flex-row flex-wrap">
  <% @cars.each do |car| %>
  <div class="col-3">
    <div class="card">
      <% if car.photo.attached? %>
        <%= cl_image_tag car.photo.key, class: "card-img-top" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= car.title %></h5>
        <h5 class="card-title"><%= car.year %></h5>
        <h5 class="card-title"><%= car.price %></h5>
        <div class="text-center">
          <%= link_to "View More", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
